@using qlts.Enums
@model qlts.ViewModels.FixedAssetManufacturers.FixedAssetManufacturerCreateUpdateViewModel
@{
    ViewBag.pTitle = "Thêm hãng sản xuất";
    ViewBag.pageTitle = "Trang chủ";

    var isUpdate = Model != null && Model.Id != Guid.Empty;
    ViewBag.Title = isUpdate ? "hãng sản xuất " + Model.Name : "Thêm mới hãng sản xuất";
    string controller = "Manufacturers";
}

@section styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
}
<div class="row">
    <div class="col-xl-7 mx-auto">
        <h6 class="mb-0 text-uppercase">@ViewBag.Title</h6>
        <hr>
        <div class="card border-top border-0 border-4 border-primary">
            <div class="card-body p-5">
                <div class="card-title d-flex align-items-center">

                </div>
                <form method="post" action="@Url.Action( "CreateUpdate", controller )" autocomplete="off" class="row g-3">
                    @Html.AntiForgeryToken()
                    @if (isUpdate)
                    {
                        @Html.HiddenFor(x => x.Id)
                    }

                    <div class="col-6">
                        @Html.LabelFor(x => x.Name)
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-6">
                        @Html.LabelFor(x => x.FixedAssetCode)
                        @Html.TextBoxFor(x => x.FixedAssetCode, new { @class = "form-control", autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.FixedAssetCode, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-6">
                        @Html.LabelFor(x => x.Unit)
                        @Html.EnumDropDownListFor(x => x.Unit, new { @class = "form-control form-select" })
                        @Html.ValidationMessageFor(model => model.Unit, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-6">
                        @Html.LabelFor(x => x.FixedAssetName)
                        @Html.TextBoxFor(x => x.FixedAssetName, new { @class = "form-control", autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.FixedAssetName, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-6">
                        @Html.LabelFor(x => x.DateFormatted)
                        @Html.TextBoxFor(x => x.DateFormatted, new { @class = "form-control datepicker", autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.DateFormatted, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-6">
                        @Html.LabelFor(x => x.WarrantyPeriodDateFormatted)
                        @Html.TextBoxFor(x => x.WarrantyPeriodDateFormatted, new { @class = "form-control datepicker", autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.WarrantyPeriodDateFormatted, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-12">
                        @Html.LabelFor(x => x.Description)
                        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", autocomplete = "off", @rows = 3 })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-12">
                        @Html.LabelFor(x => x.Note)
                        @Html.TextAreaFor(x => x.Note, new { @class = "form-control", autocomplete = "off", @rows = 3 })
                        @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-12">
                        <a href="@Url.Action("Index",controller)" class="btn btn-outline-secondary px-4"><i class="bx bx-left-arrow-alt me-2"></i>Quay về</a>
                        <button type="submit" class="btn btn-primary px-5"> <i class="bx bx-save me-2"></i>Lưu</button>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(function () {
            "use strict";
            $('.form-select').select2({
                theme: "bootstrap-5",
                width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
                placeholder: $(this).data('placeholder'),
            });
        });
    </script>
    }